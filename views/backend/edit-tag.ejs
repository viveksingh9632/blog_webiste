<%- include('./partials/head') %>

<div class="container">
  <div class="row">
    <div class="col-lg-6 mx-auto mt-4">
      <div class="card shadow">
        <div class="card-header bg-success">
          <h3 class="text-light">Edit tag</h3>
        </div>
        <div class="card-body p-4">
          <form action="/edit-tag/<%= id %>" method="post">


            <div class="mb-3">
              <label for="name">Name</label>
              <input
                type="text"
                name="name"
                class="form-control form-control-lg"
                value="<%= tag.name %>"
                placeholder="Enter slug"
                required
              />
              </div>


            <div class="mb-3">
                <label for="slug">Slug</label>
                <input
                  type="text"
                  name="slug"
    
                  class="form-control form-control-lg"
                  value="<%= tag.slug %>"
                  placeholder="Enter slug"
                  required
                />
                </div>
              
            <div class="mb-3">
              <label for="content" class="form-label">Content</label>
              <textarea
                id="content"
                name="content"
                class="form-control"
                rows="4"
                placeholder="Enter content"
                required
              ><%= tag.content %></textarea>
            </div>

            <div class="mb-3">
                <label for="category">Category</label>
                <input
                  type="text"
                  name="category"
  
                  class="form-control form-control-lg"
                  value="<%= tag.category %>"
                  placeholder="Enter category"
                  required
                />
  
            <div class="mb-3">
              <input
                type="submit"
                value="Submit"
                class="btn btn-success"
              />
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>
