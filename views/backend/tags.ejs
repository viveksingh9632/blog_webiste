<%- include('./partials/head') %>

<div class="container">
  <div class="row">
    <div class="col-lg-12 mx-auto mt-4">
      <a href="/add-tag" class="btn btn-primary mb-4">Add tag</a>

      <% if (message) { %>
      <div
        class="alert alert-dismissible fade show alert-<%= message.type %>"
        role="alert"
      >
        <%= message.text %>
        <button
          class="btn-close"
          type="button"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
        <strong><%= message.message %> </strong>
      </div>
      <% } %>
      <div class="table-responsive">
        <table class="table table-striped text-center">
          <thead>
            <tr class="table-dark">
              <th>Name</th>
              <th>Slug</th>
              <th>Content</th>
              <th>Category</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% tags.forEach((tag) => { %>

              <tr>
                <td><%= tag.name %></td>
                <td><%= tag.slug %></td>
                <td><%= tag.content %></td>
                <td><%= tag.category %></td>

                <td>
                  <a href="/edit-tag/<%= tag._id %>" class="text-success"
                    ><i class="fas fa-edit fa-lg mx-1"></i
                  ></a>
                  <a href="/delete-tag/<%= tag._id %>" class="text-danger"
                    ><i class="fas fa-trash-alt fa-lg mx-1"></i
                  ></a>
                </td>
              </tr>
              <% }); %>

          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>
